<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_Calendar"
        android:textColor="#E60753"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <EditText
    android:id="@+id/edt_Calendar"
    android:layout_below="@+id/txt_Calendar"
    android:layout_marginTop="50dp"
    android:layout_centerInParent="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="Chọn ngày bắt đầu" />

    <EditText
        android:id="@+id/edt_Calendar1"
        android:layout_below="@+id/edt_Calendar"
        android:layout_marginTop="50dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Chọn ngày kết thúc"
        android:inputType="none" />

    <TextView
        android:id="@+id/txt_ThongBao"
        android:textColor="#E60753"
        android:layout_below="@id/edt_Calendar1"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_BatDau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_ThongBao"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:textColor="#EF0808"
        android:background="#F4DC03"
        android:padding="15dp"
        android:text="Bắt đầu tính"/>

</RelativeLayout>